.Graph__image
    position absolute
    bottom 0
    left 0

.Graph__line
    fill transparent
    stroke $colorParticle10

// TODO: Fix this.
.Graph__line.Graph__color0
    fill transparent
    stroke $colorParticle10

.Graph__line.Graph__color1
    fill transparent
    stroke $colorParticle100

.Graph__area
    fill alpha($colorParticle10, 0.06)

.Graph__area.Graph__color0
    fill alpha($colorParticle10, 0.06)

.Graph__area.Graph__color1
    fill alpha($colorParticle100, 0.06)

.Graph__axis
    fill transparent
    //shape-rendering crispEdges

.Graph__text
    fill $colorBase

.tick
    line
        stroke alpha($colorDim, 0.1)
    text
        font-family 'FiraSans'
        font-weight 200
        font-size .75rem
        stroke $colorBase

.Graph__smoothed
    stroke $colorMagnitude2

.Graph__observed
    stroke alpha($colorMagnitude2, 0.3)

.Graph__predicted
    stroke $colorTitle

.Graph__sun
    fill transparent

.Graph__sunspot
    stroke $colorHighlight
    vector-effect non-scaling-stroke
    stroke-width 1px
    fill transparent

.Graph__dots
    fill transparent

.Graph__density
    fill $colorTitle

.Graph__temperature
    fill $colorMagnitude2

.Graph__legendColor--particles1
    background-color $colorParticles1
.Graph__legendColor--particles2
    background-color $colorParticles2
.Graph__legendColor--particles2
    background-color $colorParticles3

.Graph__legendColor--solarWind1
    background-color $colorSolarWind1
.Graph__legendColor--solarWind2
    background-color $colorSolarWind2
